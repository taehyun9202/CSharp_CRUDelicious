@model Menu
<h1>Edit @Model.ItemName</h1>

<form asp-action="Update" asp-route-Id="@Model.FoodId" method="post">
    <div class="form-group">
        <span asp-validation-for="ChefName"></span><br>
        <label asp-for="ChefName">Chef's Name</label>
        <input asp-for="ChefName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="ItemName"></span><br>
        <label asp-for="ItemName">Name of Dish</label>
        <input asp-for="ItemName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span><br>
        <label asp-for="Calories">Amount of Calories</label>
        <input asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span><br>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value="" disabled selected>Rate Your Dish</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span><br>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control">
    </div>
    <input type="submit" value="Update @Model.ItemName" class="btn btn-danger">
</form>